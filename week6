#include <stdio.h>

    int main() {
        int X;
        printf("Enter a number X: \n");
        scanf("%d", &X);
    
        for (int n = 0; n < X; n++) {
            if (n > 4) printf("%d\n", n);
            else printf("%d\n", 9 - n);
        }
        return 0;
    }

//q2
#include <stdio.h>

int main() {
    char word[100];
    int count = 0;

    printf("Input a word: \n");
    scanf("%s", word);

    while (word[count] != '\0') count++;

    printf("%s is %d characters in length.\n", word, count);
    return 0;
}

