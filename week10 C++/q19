#include <iostream>
int main() {
    int arr[5];

    std::cout << "Enter 5 numbers: " << std::endl;
    for (int i = 0; i < 5; i++) {
        std::cin >> arr[i];
    }
    int even = 0, odd = 0;
    for (int i = 0; i < 5; i++) {
        if (arr[i] % 2 == 0) {
            even++;
        } else {
            odd++;
        }
    }

    std::cout << "Even numbers: " << even << std::endl;
    std::cout << "Odd numbers: " << odd << std::endl;
    return 0;
}
