#include <iostream>
#include <cmath>
int main() {
    int n, flag = 1;
    std::cout << "Enter a positive integer: " << std::endl;
    std::cin >> n;
    if (n <= 1) flag = 0;
    for (int i = 2; i <= sqrt(n); i++) {
        if (n % i == 0) {
            flag = 0;
            break;
        }
    }
    if (flag) std::cout << n << " is a prime number." << std::endl;
    else std::cout << n << " is not a prime number." << std::endl;
    return 0;
}