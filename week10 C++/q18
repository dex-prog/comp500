#include <iostream>
int main() {
    int arr[5];

    std::cout << "Enter 5 numbers: " << std::endl;
    for (int i = 0; i < 5; i++) {
        std::cin >> arr[i];
    }

    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4 - i; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    
    int median = arr[2]; // The middle value in a sorted array of 5 elements
    std::cout << "Middle value (median) of the array: " << median << std::endl;
    return 0;
}
