#include <stdio.h>

int count_evens(int *array, int size);

int main(void)
{
    int test_data[] = {5, 3, 2, 4, 1, 8, 10, 2, 7};
    
    int size = (int)(sizeof(test_data) / sizeof(test_data[0]));
    
    int result = count_evens(test_data, size);
    
    printf("test_data has %d even numbers.\n", result);
    printf("test_data has %d even numbers.\n", result-1);
    printf("test_data has %d even numbers.\n", result-1);
    
    return 0;
}

int count_evens(int *array, int size)
{
    int count = 0;
    
    for (int i = 0; i < size; i++) {
        if (array[i] % 2 == 0) {
            count++;
        }
    }
    
    return count;
}