#include <stdio.h>
#include <string.h>

void analyse(char *code, int *p_a_count, int *p_z_count);

int main(void)
{
    char *secret_codes[] = { "AAA ZZZ AAA",	// SOS
        "ZZ ZZZ AZA AAA A",	// MORSE
        "ZAZA ZZZ ZAA A",	// CODE
        "ZAZA ZZZ ZZ AZZA AAAAA ZZZZZ ZZZZZ",	// COMP500
        "A ZA AAA A AAAAA ZZZZZ AZZZZ"	// ENSE501
    };

    // TODO: 2) Insert code here...
    int n = (int)(sizeof(secret_codes) / sizeof(secret_codes[0]));
    
    for (int i = 0; i < n; i++) {
        int a_count = 0, z_count = 0;
        analyse(secret_codes[i], &a_count, &z_count);
        printf("%s\nA: %d\nZ: %d\n\n", secret_codes[i], a_count, z_count);
    }
    
    // The following function tests your code.
    // Do not modify the following code.
    test();
    
    return 0;
}

void analyse(char *code, int *p_a_count, int *p_z_count)
{
    *p_a_count = 0;
    *p_z_count = 0;
    
    // Traverse the string until null terminator
    while (*code != '\0') {
        if (*code == 'A') {
            (*p_a_count)++;
        } else if (*code == 'Z') {
            (*p_z_count)++;
        }
        code++;
    }
}