#include <stdio.h>

void exchange(float *px, float *py);

int main(void)
{
    float x = 1.2f;
    float y = 3.4f;
    
    printf("x = %f y = %f\n", x, y);
    
    exchange(&x, &y);
    
    printf("x = %f y = %f\n", x, y);
    
    return 0;
}

void exchange(float *px, float *py)
{
    float temp = *px;
    *px = *py;
    *py = temp;
}